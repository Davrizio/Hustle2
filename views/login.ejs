<html lang="en" data-theme="fantasy">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hustle!</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/imgs/favicon-32x32.png" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" />
  <link rel="stylesheet" href="../css/output.css" type="text/css" />
</head>

<body>
  <main class="flex flex-col w-full border-opacity-50">
    <div class="grid h-920 place-items-center">
      <div class="navbar-center">
        <a href="/login"><img class="object-contain py-3" src="/imgs/logo.jpg"></a>
      </div>
      <section class="col-6 mt-5">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
        <div class="alert alert-danger"><%= el.msg %></div>
        <% }) %> <%}%> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
        <div class="alert alert-info"><%= el.msg %></div>
        <% }) %> <%}%>
          <form action="/login" method="POST">
            <div class="hero min-h-screen">
              <div class="hero-content flex-col lg:flex-row-reverse">
                <div class="text-center lg:text-left">
                  <h1 class="text-5xl font-bold">Go Ahead and Login!</h1>
                  <p class="py-6">Create an Awesome workout!</p>
                </div>

                <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-secondary">
                  <div class="card-body">
                    <div class="form-control">
                      <label class="label">
                        <span class="label-text">Email</span>
                      </label>
                      <input type="email" placeholder="ex. you@gmail.com" class="input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
                    </div>
                    
                    <div class="form-control">
                      <label class="label">
                        <span class="label-text">Password</span>
                      </label>
                      <input type="password" placeholder="ex. 12345" class="input input-bordered" id="exampleInputPassword1" name="password" />
                      <label class="label">
                        <a href="/login" class="label-text-alt link link-hover">Forgot password?</a>
                      </label>
                    </div>
                    <div class="form-control flex items-start">
                     <div class="flex items-center h-5">
                      <input id="remember" type="checkbox" value="" class="w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-blue-300 dark:bg-gray-600 dark:border-gray-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800" required>
                     </div>
                     <label for="remember" class="ms-2 text-sm font-medium text-gray-900 dark:text-gray-300">Remember me</label>
                    </div>
                    <div class="form-control mt-6">
                      <button class="btn btn-info hover:bg-primary">Login</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </section>
      </div>
    </main>
    <%- include('partials/footer') -%>