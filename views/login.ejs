<%- include('partials/headerLogoOnly') -%>

<main class="flex flex-col w-full border-opacity-50">
    <% if (locals.messages.errors) { %> 
      <% messages.errors.forEach( el => { %>
        <div class="toast toast-top toast-center">
          <div class="alert alert-warning">
            <div><%= el.msg %></div>
          </div>
        </div>
      <% }) %> 
    <% } %> 
    <% if (locals.messages.info) { %> 
      <% messages.info.forEach( el => { %>
        <div class="toast toast-top toast-center">
          <div class="alert alert-info">
            <div><%= el.msg %></div>
          </div>
        </div>
      <% }) %> 
    <% } %>
    <% if (locals.messages.success) { %> 
      <% messages.success.forEach( el => { %>
        <div class="toast toast-top toast-center">
          <div class="alert alert-success">
            <div><%= el.msg %></div>
          </div>
        </div>
      <% }) %> 
    <% } %>
    <div class="grid h-920 place-items-center">
      <div class="navbar-center">
        <a href="/login"><img class="object-contain py-3" src="/imgs/logo.jpg"></a>
      </div>
      <section class="col-6 mt-5">
          <form action="/login" method="POST">
            <div class="hero min-h-screen">
              <div class="hero-content flex-col lg:flex-row-reverse">
                <div class="text-center lg:text-left">
                  <h1 class="text-5xl font-bold">Go Ahead and Login!</h1>
                  <p class="py-6">Create an Awesome workout!</p>
                </div>

                <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-secondary">
                  <div class="card-body">
                    <div class="form-control">
                      <label class="label">
                        <span class="label-text">Email</span>
                      </label>
                      <input type="email" placeholder="ex. you@gmail.com" class="input input-bordered" id="exampleInputEmail1" aria-describedby="emailHelp" name="email"/>
                    </div>
                    
                    <div class="form-control">
                      <label class="label">
                        <span class="label-text">Password</span>
                      </label>
                      <input type="password" placeholder="ex. 12345" class="input input-bordered" id="exampleInputPassword1" name="password" />
                      <label class="label">
                        <a href="/password-reset" class="label-text-alt link link-hover">Forgot password?</a>
                      </label>
                    </div>
                    <div class="form-control mt-6">
                      <button class="btn btn-info hover:bg-primary">Login</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </section>
      </div>
</main>
<%- include('partials/footer') -%>