    <%- include('partials/header') -%>
    <main>
      <%- include('partials/toast') -%>
      <section class="col-6">
        <form action="/passwordReset/passwordReset/" method="POST">
          <div class="hero min-h-screen" style="background-image: url(/imgs/gym.png);">
            <div class="hero-overlay bg-opacity-60"></div>
            <div class="hero-content flex-col lg:flex-row-reverse">
              <div><img src="/imgs/logo.jpg">
              </div>  
              <div class="card flex-shrink-0 w-full max-w-sm shadow-2xl bg-primary">
                <div class="card-body">
                  <div class="text-center lg:text-left">
                    <h1 class="text-5xl font-bold text-primary-content">Change Password</h1>
                    <p class="py-6"></p>
                  </div>
                  <div class="form-control">
                    <label class="label">
                      <span class="label-text text-primary-content">New Password</span>
                    </label>
                    <input type="password" name="password" id="password" placeholder="••••••••" class="input input-bordered" required/>
                  </div>                 
                  <div class="form-control mt-6">
                    <button class="btn text-primary-content bg-secondary hover:bg-accent">Send</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </section>
    </main>
  </body>
</html>